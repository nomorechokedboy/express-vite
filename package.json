{
  "name": "api-template",
  "version": "1.0.0",
  "description": "template for express restful api of myself",
  "main": "build/index.js",
  "author": "Duong Le",
  "license": "MIT",
  "type": "commonjs",
  "private": true,
  "scripts": {
    "build": "etsc",
    "dev": "nodemon",
    "pre-commit": "lint-staged",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "lint": "eslint --ignore-path .eslintignore --ext .ts .",
    "test": "jest --coverage --detectOpenHandles --forceExit",
    "start": "TS_NODE_BASEURL=./build node -r tsconfig-paths/register ."
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.4",
    "morgan": "^1.10.0",
    "redis": "^4.1.0",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@types/validatorjs": "^3.15.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "esbuild": "^0.14.49",
    "esbuild-node-tsc": "^1.8.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint_d": "^12.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "*.{js,ts,json,yml,yaml}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  }
}
